{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "temp",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "rootDir": ".",
    "paths": {
      "@tegaki/*": ["./packages/*/src"],
      "tegaki": ["./packages/tegaki/src"]
    }
  },
  "include": ["./packages/**/src/*.ts"]
}
