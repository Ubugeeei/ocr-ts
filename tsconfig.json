{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "dist",
    "emitDeclarationOnly": true,
    "declarationDir": "dist/types",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true
  },
  "include": [
    "./packages/**/*.ts"
, "packages/frontend/next.js", "packages/frontend/index.js"  ]
}
