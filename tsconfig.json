{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "temp",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "rootDir": ".",
    "paths": {
      "@tecack/*": ["./packages/*/src"],
      "tecack": ["./packages/tecack/src"]
    }
  },
  "include": ["./packages/**/src/*.ts"]
}
